{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,  // ✅ Set to `true` for better TypeScript checks
    "noEmit": true,  // ✅ Prevents emitting compiled files
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // ✅ Changed to `node` for better compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",  // ✅ Updated to "src" to match project structure
    "paths": {
      "@/*": ["*"],  // ✅ Root alias
      "@/components/*": ["components/*"],  // ✅ Components alias
      "@/utils/*": ["utils/*"],  // ✅ Utilities alias
      "@/styles/*": ["styles/*"]  // ✅ Styles alias
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
